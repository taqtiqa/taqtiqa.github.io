<!--
 https://coreos.com/rkt/docs/latest/signing-and-verification-guide.html#distributing-images-via-meta-discovery
-->
<RoutingRules>
  <RoutingRule>
    <Condition>
      <KeyPrefixEquals>rkt-base?ac-discovery=1</KeyPrefixEquals>
    </Condition>
    <Redirect>
      <Protocol>https</Protocol>
      <HostName>www.taqtiqa.io</HostName>
      <ReplaceKeyPrefixWith>rkt-base.html</ReplaceKeyPrefixWith>
    </Redirect>
  </RoutingRule>
  <RoutingRule>
    <Condition>
      <KeyPrefixEquals>rkt-rrr-base?ac-discovery=1</KeyPrefixEquals>
    </Condition>
    <Redirect>
      <Protocol>https</Protocol>
      <HostName>www.taqtiqa.io</HostName>
      <ReplaceKeyPrefixWith>rkt-rrr-base.html</ReplaceKeyPrefixWith>
    </Redirect>
  </RoutingRule>
  <RoutingRule>
    <Condition>
      <KeyPrefixEquals>rkt-rrr-tidy?ac-discovery=1</KeyPrefixEquals>
    </Condition>
    <Redirect>
      <Protocol>https</Protocol>
      <HostName>www.taqtiqa.io</HostName>
      <ReplaceKeyPrefixWith>rkt-rrr-tidy.html</ReplaceKeyPrefixWith>
    </Redirect>
  </RoutingRule>
  <RoutingRule>
    <Condition>
      <KeyPrefixEquals>rkt-rrr-finance?ac-discovery=1</KeyPrefixEquals>
    </Condition>
    <Redirect>
      <Protocol>https</Protocol>
      <HostName>www.taqtiqa.io</HostName>
      <ReplaceKeyPrefixWith>rkt-rrr-finance.html</ReplaceKeyPrefixWith>
    </Redirect>
  </RoutingRule>
  <RoutingRule>
    <Condition>
      <HttpErrorCodeReturnedEquals>403</HttpErrorCodeReturnedEquals>
    </Condition>
    <Redirect>
      <ReplaceKeyPrefixWith>/</ReplaceKeyPrefixWith>
      <Protocol>https</Protocol>
      <HostName>www.taqtiqa.io</HostName>
    </Redirect>
  </RoutingRule>
</RoutingRules>